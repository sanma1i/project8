extends layout.pug
block title
  title SQL Library Manager
block content
  h1 Books
  p= url
  p
    a.button(href="/books/new") Create New Book
  form(action="/books")
    input(type="search" name="search" placeholder="Search for a book")
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
  hr
  div.pagination
    - let i = 1;
      while i < pages + 1
        a.button.page(href=`/books?page=${i}`)= i++